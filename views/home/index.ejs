<!DOCTYPE html>
<html>
   <head>
      <script
         src="https://code.jquery.com/jquery-3.2.1.min.js"
         integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
         crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
      <link rel="stylesheet" href="/css/main.css">
      <link href="https://fonts.googleapis.com/css?family=Arvo" rel="stylesheet">
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
     <div class="navbar-fixed">
     <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo center">ShopEZ</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="#">Home</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Logout</a></li>
        </ul>
      </div>
    </nav>
    </div>


    <div id="modal1" class="modal">
    <div class="modal-content">
      <form action="/home/lists/add" method="post">
        <input type="text" name="name" placeholder="List Name" required>
        <input type="text" name="user_id" value=1 hidden>
        <input type="text" name="description" placeholder="List Description" required>
    </div>
    <div class="modal-footer">
      <button class="btn" type="submit" name="submit">Create New Shopping List!</button>
      </form>
    </div>
  </div>


     <div class="container">





       <div class="row">
         <div class="col s7">
           <h1>Welcome, User!</h1>
         </div>
         <div class="col s5">
           <a class="waves-effect btn btttn">Unfinished</a>
           <a class="waves-effect btn btttn">Completed</a>
         </div>
       </div>
       <div class="row">

       </div>
       <div class="row">
         <div class="addIt">
           <a href="#">
         <div class="col s12 m6">
           <div class="card-container">
             <div class="card">
               <div class="card-content">
                 <span class="card-title">Add New List<i class="material-icons">add</i></span>
                 </div>
               </div>
             </div>
         </div>
         </a>
        </div>

         <% userLists.map((x) => { %>
           <div class="col s12 m6">
             <div class="card-container">
               <div class="card">
                 <div class="card-content">
                   <span class="card-title"><%= x.list_name %></span>
                   <div class="list-description">
                     <%= x.description %>
                   </div>
                   </div>
                 </div>
               </div>
           </div>
         <% }) %>

       </div>
     </div>
     <script type="text/javascript" src="/scripts/homeScript.js">
     </script>
   </body>
</html>



